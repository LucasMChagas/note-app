<div class="editor-container">
    <MudTextField 
        Style="font-family: 'Nothing You Could Do', serif; font-weight: 400; font-style: normal; font-size: 30px; color: black" 
        @bind-Value="Note.Title" 
        OnBlur="OnContentChanged"  
        OnDebounceIntervalElapsed="OnContentChanged" 
        T="string"  
        Variant="Variant.Filled" 
        DebounceInterval="2000" 
        Lines="1"  />
    <MudTextField 
        Style="font-family: 'Nothing You Could Do', serif; font-weight: 400; font-style: normal; font-size: 27px; color: black" 
        @bind-Value="Note.Body" 
        OnBlur="OnContentChanged"  
        OnDebounceIntervalElapsed="OnContentChanged" 
        T="string"  
        Variant="Variant.Filled" 
        DebounceInterval="2000"  
        Lines="18" />
</div>

